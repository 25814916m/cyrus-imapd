srcdir = @srcdir@
VPATH = @srcdir@
PURIFY = /usr/local/bin/purify

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
AFS_LDFLAGS = @AFS_LDFLAGS@
AFS_LIBS = @AFS_LIBS@
LIBS = @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

all: ptloader ptexpire ptdump # pttest

install:
	$(INSTALL) @STRIP@ -m 755 ptloader $(DESTDIR)$(cyrus_prefix)/bin
	$(INSTALL) @STRIP@ -m 755 ptexpire $(DESTDIR)$(cyrus_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

ptloader: ptloader.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptloader.o ${AFS_LDFLAGS} $(AFS_LIBS) $(DEPLIBS) $(LIBS)

ptloader.pure: ptloader.o $(DEPLIBS)
	$(PURIFY) $(PUREARGS) $(CC) $(LDFLAGS) -o $@ ptloader.o ${AFS_LDFLAGS} $(AFS_LIBS) $(DEPLIBS) $(LIBS)

ptexpire: ptexpire.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptexpire.o $(DEPLIBS) $(LIBS)

ptdump: ptdump.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptdump.o $(DEPLIBS) $(LIBS)


ptexpire.pure: ptexpire.o $(DEPLIBS)
	$(PURIFY) $(PUREARGS) $(CC) $(LDFLAGS) -o $@ ptexpire.o $(DEPLIBS) $(LIBS)

#pttest: pttest.o auth_krb_pts.o  $(DEPLIBS)
#        $(CC) $(LDFLAGS) -o $@ pttest.o auth_krb_pts.o $(OBJS) $(DEPLIBS) $(LIBS)
clean:
	rm -f *.o Makefile.bak ptexpire ptloader

distclean: clean
	rm -f Makefile

depend: 
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c 1>makedepend.log 2>&1

