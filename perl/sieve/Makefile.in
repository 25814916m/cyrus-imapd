SUBDIRS = managesieve
SCRIPTS = installsieve sieveshell

srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

INSTALL = @INSTALL@

SHELL = /bin/sh
@SET_MAKE@

prefix = @prefix@
exec_prefix = @exec_prefix@

# Note that we use the *dynamic* sasl libraries
SASL_LIB=@LIB_DYN_SASL@
SASL_INC=@DYNSASLFLAGS@
OPENSSL_LIB=@OPENSSL_LIB@
OPENSSL_INC=@OPENSSL_INC@
BDB_LIB=@BDB_LIB@
BDB_INC=@BDB_INC@

LIB_RT=@LIB_RT@
LIB_UUID=@LIB_UUID@
ZLIB=@ZLIB@

CC=@CC@
PERL=@PERL@
PERL_PREINSTALL=@PERL_PREINSTALL@

all::
	@for d in $(SUBDIRS); \
	do \
		(if [ ! -e $$d ]; then mkdir $$d; fi; \
		 cd $$d; echo "### Making" all "in" `pwd`; \
			if [ -f ../$(srcdir)/$$d/Makefile.PL -a ! -f Makefile ]; then \
			   LIB_RT="$(LIB_RT)" \
			   LIB_UUID="$(LIB_UUID)" \
			   ZLIB="$(ZLIB)" \
			   srcdir="../$(srcdir)/$$d" \
			   top_srcdir="../$(top_srcdir)" \
			   BDB_LIB="$(BDB_LIB)" BDB_INC="$(BDB_INC)" \
			   OPENSSL_LIB="$(OPENSSL_LIB)" OPENSSL_INC="$(OPENSSL_INC)" \
			   SASL_LIB="$(SASL_LIB)" SASL_INC="$(SASL_INC)" CC="$(CC)" \
			   PERL_PREINSTALL="$(PERL_PREINSTALL)" \
			     $(PERL) ../${srcdir}/$$d/Makefile.PL PREFIX=$(prefix); \
			fi; \
			$(MAKE) $(MFLAGS) DESTDIR=$(DESTDIR) all) || exit 1; \
	done

install::
	for s in $(SCRIPTS); \
	do \
		$(PERL_PREINSTALL) < scripts/$$s.pl > scripts/$$s ;\
		$(INSTALL) -m 755 scripts/$$s $(DESTDIR)$(exec_prefix)/bin/$$s ; \
	done
#xxx install scripts/*
	@for d in  $(SUBDIRS); \
	do \
		(cd $$d; echo "### Making" install "in" `pwd`;	\
			$(MAKE) $(MFLAGS) DESTDIR=$(DESTDIR) install) || exit 1; \
	done

clean::
	@-for d in  $(SUBDIRS); \
	do \
		(cd $$d; echo "### Making" clean "in" `pwd`;	\
			$(MAKE) $(MFLAGS) DESTDIR=$(DESTDIR) clean ;	\
			echo "### Done with" `pwd`);		\
	done

distclean::
	@-for d in  $(SUBDIRS); \
	do \
		(cd $$d; echo "### Making" clean "in" `pwd`;	\
			$(MAKE) $(MFLAGS) DESTDIR=$(DESTDIR) distclean ; \
			echo "### Done with" `pwd`);		\
	done
	rm -f Makefile Makefile.bak config.status config.log config.cache
