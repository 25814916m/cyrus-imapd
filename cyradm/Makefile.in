srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@ 

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

all: cyradm

install:
	$(INSTALL) -s -m 755 cyradm $(DESTDIR)$(exec_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

cyradm: cyradmapp.o cyradm.o cyrinit.o cyrmain.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o cyradm cyradmapp.o cyradm.o cyrinit.o cyrmain.o \
		$(DEPLIBS) $(LIBS)

cyrinit.c: cyrinit.tcl cyrinit.sed
	sed -f $(srcdir)/cyrinit.sed $(srcdir)/cyrinit.tcl >,cyrinit.c
	mv ,cyrinit.c cyrinit.c

clean:
	rm -f *.o Makefile.bak cyradm ,cyrinit.c cyrinit.c

distclean: clean
	rm -f Makefile

depend:
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c

