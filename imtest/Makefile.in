srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = -g
LDFLAGS = -g @LDFLAGS@

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

OBJS=imtest.o

all: imtest

install:
	$(INSTALL) -s -m 755 imtest $(DESTDIR)$(exec_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

imtest: $(OBJS) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o imtest $(OBJS) $(DEPLIBS) $(LIBS)

clean:
	rm -f *.o Makefile.bak imtest

distclean: clean
	rm -f Makefile

depend: 
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c 1> makedepend.log 2>&1

