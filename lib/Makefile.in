srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

CC = @CC@

INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@ @LOCALDEFS@
CPPFLAGS = -I.. @CPPFLAGS@ @COM_ERR_CPPFLAGS@ @SASLFLAGS@
LIBS = @LIBS@

MAKEDEPEND_CFLAGS = @CFLAGS@
CFLAGS = @CFLAGS@ @PERL_CCCDLFLAGS@ $(EXTRACFLAGS)
LDFLAGS = @LDFLAGS@ $(EXTRALDFLAGS)

SHELL = /bin/sh
MAKEDEPEND = @MAKEDEPEND@

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

libdir = @libdir@

BUILTSOURCES = imapopts.h imapopts.c

LIBCYR_HDRS = $(srcdir)/acl.h $(srcdir)/assert.h $(srcdir)/auth.h \
	$(srcdir)/brearch.h $(srcdir)/byteorder64.h $(srcdir)/charset.h \
	$(srcdir)/crc32.h $(srcdir)/cyr_lock.h $(srcdir)/cyrusdb.h \
	$(srcdir)/glob.h $(srcdir)/gmtoff.h $(srcdir)/imapurl.h \
	$(srcdir)/imclient.h $(srcdir)/imparse.h $(srcdir)/iostat.h \
	$(srcdir)/iptostring.h $(srcdir)/libcyr_cfg.h $(srcdir)/lsort.h \
	$(srcdir)/md5.h $(srcdir)/mkgmtime.h $(srcdir)/nonblock.h \
	$(srcdir)/parseaddr.h $(srcdir)/rfc822date.h $(srcdir)/signals.h \
	$(srcdir)/strarray.h $(srcdir)/strhash.h $(srcdir)/stristr.h \
	$(srcdir)/sysexits.h $(srcdir)/times.h $(srcdir)/util.h 
	$(srcdir)/xmalloc.h $(srcdir)/xstrlcat.h $(srcdir)/xstrlcpy.h

LIBCYR_OBJS = acl.o acl_afs.o auth.o auth_krb.o auth_unix.o auth_krb5.o \
	auth_pts.o bsearch.o byteorder64.o charset.o chartable.o crc32.o \
	cyrusdb.o glob.o gmtoff_@WITH_GMTOFF@.o imapurl.o imclient.o \
	imparse.o iostat.o iptostring.o libcyr_cfg.o lock_@WITH_LOCK@.o \
	lsort.o mkgmtime.o nonblock_@WITH_NONBLOCK@.o parseaddr.o prot.o \
	ptrarray.o signals.o strarray.o strhash.o stristr.o times.o tok.o \
	util.o wildmat.o xmalloc.o xstrlcat.o xstrlcpy.o @CYRUSDB_OBJS@ \
	@LIBOBJS@

LIBCYRM_HDRS = $(srcdir)/assert.h $(srcdir)/hash.h $(srcdir)/imapopts.h \
	$(srcdir)/libconfig.h $(srcdir)/map.h $(srcdir)/mappedfile.h \
	$(srcdir)/mpool.h $(srcdir)/retry.h $(srcdir)/strhash.h \
	$(srcdir)/util.h $(srcdir)/xmalloc.h $(srcdir)/xstrlcat.h \
	$(srcdir)/xstrlcpy.h 

LIBCYRM_OBJS = assert.o hash.o imapopts.o libconfig.o mappedfile.o mpool.o \
	retry.o signals.o strhash.o util.o xmalloc.o xstrlcat.o xstrlcpy.o \
	@IPV6_OBJS@ map_@WITH_MAP@.o

all: $(BUILTSOURCES) libcyrus_min.a libcyrus.a

check:

install:
	$(INSTALL) -d $(DESTDIR)$(libdir)
	$(INSTALL) -m 644 libcyrus.a $(DESTDIR)$(libdir)
	$(INSTALL) -m 644 libcyrus_min.a $(DESTDIR)$(libdir)
	 $(RANLIB) $(DESTDIR)$(libdir)/libcyrus.a
	for file in $(LIBCYR_HDRS); \
	do \
		$(INSTALL) -m 644 $$file $(DESTDIR)$(prefix)/include/cyrus || exit 1; \
	done
	for file in $(LIBCYRM_HDRS); \
	do \
		$(INSTALL) -m 644 $$file $(DESTDIR)$(prefix)/include/cyrus || exit 1; \
	done

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

libcyrus.a: $(LIBCYR_OBJS)
	rm -f libcyrus.a
	ar cr libcyrus.a $(LIBCYR_OBJS)
	$(RANLIB) libcyrus.a

libcyrus_min.a: $(LIBCYRM_OBJS)
	rm -f libcyrus_min.a
	ar cr libcyrus_min.a $(LIBCYRM_OBJS)
	$(RANLIB) libcyrus_min.a

imapopts.c: imapoptions $(srcdir)/../tools/config2header
	$(srcdir)/../tools/config2header CC="$(CC)" $(srcdir)/imapopts.c $(srcdir)/imapopts.h < $(srcdir)/imapoptions

imapopts.h: imapopts.c

chartable.c: $(srcdir)/mkchartable.pl $(srcdir)/charset/unifix.txt $(srcdir)/charset/*.t $(srcdir)/charset/UnicodeData.txt $(srcdir)/charset/aliases.txt
	@echo "### Building chartables..."
	perl $(srcdir)/mkchartable.pl -m $(srcdir)/charset/unifix.txt -m $(srcdir)/charset/UnicodeData.txt -a $(srcdir)/charset/aliases.txt -o $@ $(srcdir)/charset/*.t
	@echo "### Done building chartables."

clean:
	rm -f *.o *.a chartable.c Makefile.bak makedepend.log \
	$(BUILTSOURCES) *.gcno *.gcda

distclean: clean
	rm -f Makefile

depend:
	${MAKEDEPEND} $(CPPFLAGS) $(DEFS) -I$(srcdir) $(MAKEDEPEND_CFLAGS) *.c $(srcdir)/*.c 1>makedepend.log 2>&1

