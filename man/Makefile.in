srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = -g
LDFLAGS = -g

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

MAN1 = $(srcdir)/cyradm.1
MAN5 = $(srcdir)/imapd.conf.5 $(srcdir)/krb.equiv.5
MAN8 = $(srcdir)/arbitron.8 $(srcdir)/collectnews.8 $(srcdir)/deliver.8 \
	$(srcdir)/imapd.8 $(srcdir)/pop3d.8 $(srcdir)/quota.8 \
	$(srcdir)/reconstruct.8 $(srcdir)/rmnews.8 $(srcdir)/syncnews.8 


all:

install:
	for file in $(MAN1); \
	do \
		$(INSTALL) -m 644 $$file $(DESTDIR)$(prefix)/man/man1 || exit 1 \
	done
	for file in $(MAN5); \
	do \
		$(INSTALL) -m 644 $$file $(DESTDIR)$(prefix)/man/man5 || exit 1 \
	done
	for file in $(MAN8); \
	do \
		$(INSTALL) -m 644 $$file $(DESTDIR)$(prefix)/man/man8 || exit 1 \
	done

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

clean:
	rm -f *.o Makefile.bak

distclean: clean
	rm -f Makefile

depend: 

