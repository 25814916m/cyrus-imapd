srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = -g
LDFLAGS = -g

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

OBJS=pwcheck.o pwcheck_@WITH_PWCHECK@.o

all: pwcheck

install:
	$(INSTALL) -s -m 755 pwcheck $(DESTDIR)$(cyrus_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

pwcheck: $(OBJS) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o pwcheck $(OBJS) $(DEPLIBS) $(LIBS)

clean:
	rm -f *.o Makefile.bak pwcheck

distclean: clean
	rm -f Makefile

depend: 
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c

