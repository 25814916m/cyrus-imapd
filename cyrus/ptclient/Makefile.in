srcdir = @srcdir@
VPATH = @srcdir@
PURIFY = /usr/local/bin/purify

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I.. -I$(srcdir)/../lib @COM_ERR_CPPFLAGS@ @CPPFLAGS@
AFS_LDFLAGS = @AFS_LDFLAGS@ @COM_ERR_LDFLAGS@
AFS_LIBS = @AFS_LIBS@
LIBS = @LIBS@ @COM_ERR_LIBS@
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@

SHELL = /bin/sh
MAKEDEPEND = @MAKEDEPEND@

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

EXTRA_PROGS = # ptextract pttest
PROGS = ptexpire ptloader $(EXTRA_PROGS)

all: $(PROGS)

install:
	$(INSTALL) -m 755 ptloader $(DESTDIR)$(cyrus_prefix)/bin
	$(INSTALL) -m 755 ptexpire $(DESTDIR)$(cyrus_prefix)/bin
	$(INSTALL) -m 755 $(srcdir)/doptclient   $(DESTDIR)$(cyrus_prefix)/bin

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

ptloader: ptloader.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptloader.o ${AFS_LDFLAGS} $(AFS_LIBS) $(DEPLIBS) $(LIBS)

ptloader.pure: ptloader.o $(DEPLIBS)
	$(PURIFY) $(PUREARGS) $(CC) $(LDFLAGS) -o $@ ptloader.o ${AFS_LDFLAGS} $(AFS_LIBS) $(DEPLIBS) $(LIBS)

ptexpire: ptexpire.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptexpire.o $(DEPLIBS) $(LIBS)

ptextract: ptextract.o $(DEPLIBS)
	$(CC) $(LDFLAGS) -o $@ ptextract.o $(DEPLIBS) $(LIBS)

ptexpire.pure: ptexpire.o $(DEPLIBS)
	$(PURIFY) $(PUREARGS) $(CC) $(LDFLAGS) -o $@ ptexpire.o $(DEPLIBS) $(LIBS)

#pttest: pttest.o auth_krb_pts.o  $(DEPLIBS)
#        $(CC) $(LDFLAGS) -o $@ pttest.o auth_krb_pts.o $(OBJS) $(DEPLIBS) $(LIBS)

clean:
	rm -f *.o Makefile.bak $(PROGS) makedepend.log

distclean: clean
	rm -f Makefile

depend: 
	$(MAKEDEPEND) $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c \
	1>makedepend.log 2>&1

