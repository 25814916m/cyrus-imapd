srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = -lutil @LIBS@ 
DEPLIBS = ../lib/libcyrus.a @DEPLIBS@

CFLAGS = -g
LDFLAGS = -g

SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
cyrus_prefix = @cyrus_prefix@

AFS=/usr/local

OBJS = amssync.o ams.o imap.o
MISCPH = $(srcdir)/prs_fs.ph $(srcdir)/afs_sysnames.ph \
	$(srcdir)/venus.ph $(srcdir)/vice.ph
MISCPERL = $(srcdir)/getacl.pl $(srcdir)/pioctl.pl 

all: amssync afs.ph param.ph

install:
	$(srcdir)/../install-sh -d ${DESTDIR}$(cyrus_prefix)/perllib/afs
	$(INSTALL) -s -m 755 amssync $(DESTDIR)$(cyrus_prefix)/bin
	$(INSTALL) -m 755 amssynctree $(DESTDIR)$(cyrus_prefix)/bin
	$(INSTALL) -m 644 afs.ph param.ph $(MISCPH) $(DESTDIR)$(cyrus_prefix)/perllib/afs
	$(INSTALL) -m 644 $(MISCPERL) $(DESTDIR)$(cyrus_prefix)/perllib

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

amssync: $(OBJS) $(DEPLIBS)
	$(CC) $(LDFLAGS) -o amssync $(OBJS) $(DEPLIBS) $(LIBS)

afs.ph: ${AFS}/include/afs/afs.h
	h2ph < $< > $@

param.ph: ${AFS}/include/afs/param.h
	h2ph < $< > $@

clean:
	rm -f *.o Makefile.bak amssync afs.ph param.ph

distclean: clean
	rm -f Makefile syncamstree

depend: 
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c

