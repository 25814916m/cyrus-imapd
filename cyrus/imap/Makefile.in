DEFINES=-DSETPROCTITLE

# Authentication (login) routines.
LOGIN=login_@WITH_LOGIN@.o

# \Seen state database.  Only one choice for now:
SEEN=seen_local.o

# File mapping mechanism.
MAP=map_@WITH_MAP@.o

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@
RANLIB = @RANLIB@

LEX = lex
YACC = yacc

DEFS = @DEFS@
CPPFLAGS = -I. -I$(srcdir) -I$(srcdir)/../lib -I$(srcdir)/../et @CPPFLAGS@ 
LIBS = ../et/libcom_err.a ../lib/libcyrus.a @LIBS@ 

CFLAGS = -g
LDFLAGS = -g

SHELL = /bin/sh

COMPILE_ET=../et/compile_et

LOBJS= append.o mailbox.o mboxlist.o message.o \
	parsel.o parsey.o parseadd.o parseutl.o \
	config.o imap_err.o proc.o drop.o \
	setproctitle.o \
	$(SEEN) $(MAP) $(LOGIN)

IMAPDOBJS= imapd.o index.o

PROGS = collectnews rmnews deliver imapd pop3d

all: $(PROGS)

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) $(CFLAGS) $<

collectnews: collectnews.o libimap.a $(LIBS)
	$(CC) $(LDFLAGS) -o collectnews collectnews.o libimap.a $(LIBS)

rmnews: rmnews.o libimap.a $(LIBS)
	$(CC) $(LDFLAGS) -o rmnews rmnews.o libimap.a $(LIBS)

deliver: deliver.o libimap.a $(LIBS)
	$(CC) $(LDFLAGS) -o deliver deliver.o libimap.a $(LIBS)

imapd: $(IMAPDOBJS) libimap.a $(LIBS)
	$(CC) $(LDFLAGS) -o imapd $(IMAPDOBJS) libimap.a $(LIBS)

pop3d: pop3d.o libimap.a $(LIBS)
	$(CC) $(LDFLAGS) -o pop3d pop3d.o libimap.a $(LIBS)

libimap.a: $(LOBJS)
	ar cr libimap.a $(LOBJS)
	$(RANLIB) libimap.a

.l.c:
	$(LEX) $<
	rm -f $*.c
	mv lex.yy.c $*.c

parsel.o: parsel.c parsey.h

parsey.c parsey.h: parsey.y
	$(YACC) -d $(srcdir)/parsey.y
	rm -f parsey.c parsey.h
	mv y.tab.c parsey.c
	mv y.tab.h parsey.h

imap_err.h imap_err.c: imap_err.et
	$(COMPILE_ET) $(srcdir)/imap_err.et

clean:
	rm -f *.o *.a Makefile.bak parsey.c parsey.h parsel.c imap_err.c imap_err.h $(PROGS)

distclean: clean
	rm -f Makefile

depend: parsel.c parsey.c imap_err.h
	makedepend $(CPPFLAGS) $(DEFS) $(CFLAGS) *.c $(srcdir)/*.c

